<h2 class="headline">Editing book</h2>

<%= form_for(@book) do |f| %>

	<h4 class="form-title">Title</h4>
	<%= f.text_field :title %>

	<h4 class="form-body">Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Update Book', class:"btn2" %>

<% end %>

<%= link_to "show", book_path(@book.id), class: "nav-link" %>
<span class="division">|</span>
<%= link_to "Back", books_path, class: "nav-link" %>
