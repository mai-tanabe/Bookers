<h2 class="headline">Editing book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %>&nbsp;error prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li ><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

	<h4 class="form-title">Title</h4>
	<%= f.text_field :title %>

	<h4 class="form-body">Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Update Book', class:"btn2" %>

<% end %>

<%= link_to "show", book_path(@book.id), class: "nav-link" %>
<span class="division">|</span>
<%= link_to "Back", books_path, class: "nav-link" %>
