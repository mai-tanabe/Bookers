<p class ="notice">
  <%= notice %>
</p>
<!-- table部分 -->
<h1>Books</h1>

<table>
	<thead>
    	<tr>
      		<th>Title</th>
      		<th>Body</th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @books.each do |book| %>
      		<tr>
        		<td><%= book.title %></td>
        		<td><%= book.body %></td>
        		<td><%= link_to "Show", book_path(book.id) %></td>
        		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
        		<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
      		</tr>
    	<% end %>
  	</tbody>
</table>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<!-- 新規投稿部分 -->
<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %>

<% end %>
