<!-- table部分 -->
<h1>Books</h1>

<table>
	<thead>
    	<tr>
      		<th>Title</th>
      		<th>Body</th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @books.each do |book| %>
      		<tr>
        		<td><%= book.title %></td>
        		<td><%= book.body %></td>
        		<td><%= link_to "Show", book_path(book.id) %></td>
        		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
        		<td>Destroy</td>
      		</tr>
    	<% end %>
  	</tbody>
</table>


<!-- 新規投稿部分 -->
<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %>

<% end %>
